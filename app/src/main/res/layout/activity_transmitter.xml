<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TransmitterActivity" android:background="@color/background">

    <TextView
            android:text="@string/ip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ShowIPTextView" android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/text"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ShowIPQR" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>
    <Button
            android:text="@string/sync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/SyncButton" android:layout_weight="1"
            android:onClick="syncHandler" android:background="@color/backgroundDark" android:textColor="@color/text"
            app:layout_constraintStart_toEndOf="@+id/ChangeSongButton" android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ShowIPTextView"
            app:layout_constraintEnd_toStartOf="@+id/PlayPauseButton" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.19999999"/>
    <Button
            android:text="@string/change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/ChangeSongButton" android:layout_weight="1"
            android:onClick="changeSongHandler" android:background="@color/backgroundDark"
            android:textColor="@color/text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/SyncButton" android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ShowIPTextView" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.19999999"/>
    <Button
            android:text="@string/exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ExitT"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:background="@color/backgroundDark"/><![CDATA[
    android:onClick="exitFromParty"/>

    ]]>
    <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp" app:srcCompat="@drawable/bg_clickable"
            android:id="@+id/ShowIPQR"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent" android:background="@color/transparent"
            android:contentDescription="@string/type_image"/>
    <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/PlayPauseButton"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:background="@color/backgroundDark" app:srcCompat="@drawable/playbutton"
            app:layout_constraintStart_toEndOf="@+id/SyncButton" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.661" android:onClick="resumeSongHandler"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ShowIPTextView" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.19"/>
</androidx.constraintlayout.widget.ConstraintLayout>