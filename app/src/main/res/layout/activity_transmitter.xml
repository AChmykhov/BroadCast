<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TransmitterActivity">

    <TextView
            android:text="@string/ip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ShowIPTextView" android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/linearLayout4"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout4"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="370dp" app:layout_constraintEnd_toEndOf="parent">
        <Button
                android:text="@string/change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/ChangeSongButton" android:layout_weight="1"
                android:onClick="changeSongHandler"/>
        <Button
                android:text="sync"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/SyncButton" android:layout_weight="1"
                android:onClick="sync"/>
        <Button
                android:text="@string/resume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/ResumeButton" android:layout_weight="1"
                android:onClick="resumeSong"/>
    </LinearLayout>
    <Button
            android:text="@string/exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ExitT"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="17dp"
            android:layout_marginBottom="17dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/MusicList"/>
            android:onClick="exitFromParty"/>

    <TextView
            android:text="Debug text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/debug_text"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout4" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/ExitT" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <ImageView
            android:layout_width="317dp"
            android:layout_height="315dp" app:srcCompat="@drawable/bg_clickable"
            android:id="@+id/ShowIPQR"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/ShowIPTextView" app:layout_constraintHorizontal_bias="0.426"
            app:layout_constraintVertical_bias="0.714"/>
</androidx.constraintlayout.widget.ConstraintLayout>