<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TransmitterActivity" android:background="@color/background">

    <TextView
            android:text="@string/ip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ShowIPTextView" android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/text"
            app:layout_constraintHorizontal_bias="0.498" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ShowIPQR"/>
    <Button
            android:text="@string/change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/ChangeSongButton" android:layout_weight="1"
            android:onClick="changeSongHandler" android:background="@color/backgroundDark"
            android:textColor="@color/text"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="100dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ShowIPTextView" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/PlayPauseButton"/>
    <Button
            android:text="@string/exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ExitT"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:background="@color/backgroundDark"/>
    android:onClick="exitFromParty"/>

    <TextView
            android:text="Debug text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/debug_text"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"/>
    <ImageView
            android:layout_width="317dp"
            android:layout_height="315dp" app:srcCompat="@drawable/bg_clickable"
            android:id="@+id/ShowIPQR"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.426"
    />
    <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/PlayPauseButton"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/ShowIPTextView"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="100dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/ChangeSongButton" android:layout_marginStart="8dp"
            android:background="@color/backgroundDark" app:srcCompat="@drawable/playbutton"/>
</androidx.constraintlayout.widget.ConstraintLayout>